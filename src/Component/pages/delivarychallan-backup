                  <button className="btn btn-sm item-info-btns">
                    <i className="fa fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>

            <div className="form-section client-info-container client-info-container">
              <h3 className="">Notes</h3>
              <div className="py-3">
